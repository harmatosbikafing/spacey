<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <div class="p-5 text-center bg-image">
        <div class="container h-100">
            <div class="d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-10 text-center text-white">
                    <h1>Termékfelvétel</h1>
                    <hr class="divider my-4">
                    <p class="font-weight-light mb-5">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Sed nobis laboriosam, mollitia accusantium quam excepturi culpa quo quia officiis eum necessitatibus asperiores voluptatem minus ipsa expedita! Molestiae suscipit ad quis?</p>
                    <a href="/admin/uj-termek"><button type="submit" class="btn btn-primary btn-lg">Új termék</button></a>
                </div>
            </div>
        </div>
    </div>
    <% if (prods.length > 0) { %>
        <div class="grid pt-2 text-center">
            <% for (let product of prods) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img class="img-thumbnail" src="<%= product.imageUrl %>" alt="<%= product.imageUrl %>">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price"><%= product.price %> Ft</h2>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                    <div class="card__actions">
                        <div class="row justify-content-center">
                            <div class="col-sm-5">
                                <a href="/admin/edit-product/<%= product.id %>?edit=true"><button class="specialButton">Szerkesztés</button></a>
                            </div>
                            <div class="col-sm-5">
                                <form action="/admin/delete-product" method="POST">
                                    <input type="hidden" name="productId" value="<%- product.id %>">
                                    <button class="specialButton" type="submit">Törlés</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </article>
            <% } %>
        </div>
    <% } else { %>
        <h1 class="text-center pt-3">Nincsenek létrehozott termékek!</h1>
    <% } %>
<%- include('../includes/end.ejs') %>