<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
    <br>
    <div class="bd-callout bd-callout-warning">
        <div class="container pt-3 pb-3 bd-callout bd-callout-warning">
            <form class="product-form" action="/admin/<%- editing?'edit-product':'add-product' %>" method="POST">
                <div class="mb-3">
                    <input type="text" name="title" id="title" class="mezo" placeholder="Megnevezés" value="<%- editing?product.title:'' %>" required>
                </div>
                <div class="mb-3">
                    <input type="text" name="imageUrl" id="imageUrl" class="mezo" placeholder="Kép" value="<%- editing?product.imageUrl:'' %>" required>
                </div>
                <div class="mb-3">
                    <input type="number" name="price" id="price" step="0.01" class="mezo" placeholder="Ár" value="<%- editing?product.price:'' %>" required>
                </div>
                <div class="mb-3">
                    <textarea name="description" id="description" cols="40" rows="10" maxlength="500" placeholder="Leírás" class="mezo"
                    required><%- editing?product.description:'' %></textarea>
                </div>
                <% if (!editing) { %>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="discount" id="discount" value="<%- editing?product.discount:'false' %>" 
                        onclick="discountRateShow()">
                        <p>Akció felvétele</p>
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="discountRate" id="discountRate" 
                        class="mezo" placeholder="Akció értéke" value="<%- editing?product.discountRate:'' %>" required>
                    </div>
                <% } else if (editing && product.discount == true) { %>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="discount" id="discount" value="<%- editing?product.discount:'false' %>" 
                        onclick="discountRateShow()" checked>
                        <p>Akció felvétele</p>
                    </div>
                    <div class="mb-3">
                        <input type="number" name="discountRate" id="discountRate" 
                        class="mezo" placeholder="Akció értéke" value="<%- editing?product.discountRate:'' %>" required>
                    </div>
                <% } else if (!editing && product.discount == false) { %>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="discount" id="discount" value="<%- editing?product.discount:'false' %>" 
                        onclick="discountRateShow()">
                        <p>Akció felvétele</p>
                    </div>
                    <div class="mb-3">
                        <input type="hidden" name="discountRate" id="discountRate" 
                        class="mezo" placeholder="Akció értéke" value="<%- editing?product.discountRate:'' %>" required>
                    </div>
                <% } %>
                <% if (editing) { %>
                    <input type="hidden" name="productId" value="<%= product.id %>" required>
                <% } %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="specialButton"><%- editing?'Szerkesztés':'Létrehozás' %></button>
            </form>
        </div>
    </div>
<%- include('../includes/end.ejs') %>